# https://editorconfig.org/
root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.json]
indent_size = 2

[*.{js,jsx,ts,tsx}]
indent_size = 2

[*.md]
indent_size = unset
trim_trailing_whitespace = false

[*.py]
indent_size = 4

[{*.{yaml,yml},.yamllint}]
indent_size = 2
