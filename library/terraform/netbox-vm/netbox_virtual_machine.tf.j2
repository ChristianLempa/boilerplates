resource "netbox_virtual_machine" "{{ resource_name }}" {
  name       = "{{ vm_name }}"
  cluster_id = netbox_cluster.{{ cluster_ref }}.id
{% if site_ref %}
  site_id    = data.netbox_site.{{ site_ref }}.id
{% endif %}
  status     = "{{ status }}"
{% if device_ref %}
  device_id  = netbox_device.{{ device_ref }}.id
{% endif %}
{% if resources_enabled %}
  vcpus      = {{ vcpus }}
  memory     = {{ memory_mb }}
  disk       = {{ disk_gb }}
{% endif %}
{% if description_enabled %}
  comments   = "{{ description_text }}"
{% endif %}
{% if depends_on_enabled %}
  depends_on = [{{ dependencies }}]
{% endif %}
{% if lifecycle_enabled %}

  lifecycle {
{% if prevent_destroy %}
    prevent_destroy = true
{% endif %}
{% if create_before_destroy %}
    create_before_destroy = true
{% endif %}
{% if ignore_changes %}
    ignore_changes = [{{ ignore_changes }}]
{% endif %}
  }
{% endif %}
}
