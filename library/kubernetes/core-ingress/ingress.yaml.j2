---
apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: {{ resource_name }}
  namespace: {{ namespace }}
spec:
  ingressClassName: {{ ingress_class }}
  rules:
    - host: {{ ingress_host }}
      http:
        paths:
          - path: /
            pathType: Prefix
            backend:
              service:
                name: {{ service_name }}
                port:
                  number: {{ service_port }}
