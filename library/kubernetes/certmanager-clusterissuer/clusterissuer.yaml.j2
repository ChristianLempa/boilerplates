---
apiVersion: cert-manager.io/v1
kind: ClusterIssuer
metadata:
  name: {{ resource_name }}
spec:
  acme:
    email: {{ acme_email }}
    server: {{ acme_server }}
    privateKeySecretRef:
      name: {{ privatekey_secret_name }}
    solvers:
      - dns01:
          cloudflare:
            apiTokenSecretRef:
              name: {{ api_token_secret_name }}
              key: {{ api_token_secret_key }}
