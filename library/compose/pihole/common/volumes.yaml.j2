{% if volume_mode == 'local' %}
volumes:
  {{ service_name }}-dnsmasq:
    driver: local
  {{ service_name }}-pihole:
    driver: local
{% elif volume_mode == 'nfs' %}
volumes:
  {{ service_name }}-dnsmasq:
    driver: local
    driver_opts:
      type: nfs
      o: addr={{ volume_nfs_server }},{{ volume_nfs_options }}
      device: ":{{ volume_nfs_path }}/dnsmasq"
  {{ service_name }}-pihole:
    driver: local
    driver_opts:
      type: nfs
      o: addr={{ volume_nfs_server }},{{ volume_nfs_options }}
      device: ":{{ volume_nfs_path }}/pihole"
{% endif %}
