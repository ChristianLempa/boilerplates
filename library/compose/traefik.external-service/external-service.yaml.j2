http:
  # Router Configuration
  routers:
    {{ service_name }}-router:
      rule: "Host(`{{ service_host }}`)"
      service: {{ service_name }}
      priority: {{ router_priority }}
      entryPoints:
        - web
        {% if tls_enabled %}
        - websecure
      tls:
        certResolver: {{ cert_resolver }}
        {% endif %}

  # Service Configuration
  services:
    {{ service_name }}:
      loadBalancer:
        servers:
          - url: "{{ service_url }}"